{"compilerOptions": {
  "module": "commonjs",
  "target": "es6",
  "removeComments": false,
  "noImplicitAny": false,
  "sourceMap": true,
  "allowJs": true,
  "listFiles": true,
  "traceResolution": true,
  "lib": [
    "dom",
    "es5",
    "es6",
    "es7",
    "es2015.promise"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "experimentalDecorators": true // 配置装置器
  
},
"exclude": ["node_modules"],
"include": [
  "src/**/*"
]
}
